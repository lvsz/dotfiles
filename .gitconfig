[core]
    editor = vim
	autocrlf = input
	excludesfile = /home/odoo/.gitignore
[init]
    defaultBranch = main
[oh-my-zsh]
	hide-status = 1
	hide-dirty = 1
[gpg]
	program = gpg
[commit]
	gpgsign = true
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[checkout]
	defaultRemote = origin
[diff]
	tool = vimdiff
[difftool]
	prompt = false
